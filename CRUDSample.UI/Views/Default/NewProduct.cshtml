
@{
    Layout = null;
}
@using CRUDSample.UI
@model Product

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ürün Ekleme Sayfası</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("NewProduct", "Default", FormMethod.Post))
    {
        <span>Urun Adi: </span> @Html.TextBoxFor(a => a.ProductName)
        <br />
        <span>Urun Kategori ID: </span> @Html.TextBoxFor(a => a.CategoryID)
        <br />
        <span>Urun Fiyati: </span> @Html.TextBoxFor(a=>a.UnitsInStock)
        <input type="submit" name="name" value="Urunu Kaydet"/>
    }

</body>
</html>
<script src="~/Scripts/bootstrap.js"></script>